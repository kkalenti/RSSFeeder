@model IEnumerable<RSSFeeder.Models.SingleFeedSettingsModel>

@{
    ViewData["Title"] = "FeedsSettings";
}

<h1>Настройки лент</h1>

<div class="row">
    <div class="col-md-4 col-lg-12">

        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.RSSUrl)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.RSSUrl)
                        </td>
                        <td>
                            
                            @Html.ActionLink("Редактировать", "EditFeed", new {item.Id}) |
                            @Html.ActionLink("Удалить", "DeleteFeed", new { item.Id })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <div class="float-right">
            <a class="btn btn-primary" asp-action="AddNewFeed">Добавить ленту</a>
        </div>

    </div>
</div>